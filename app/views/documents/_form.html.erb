<%= form_for(@document, :html => { :multipart => true }) do |f| %>
 <% if @document.errors.any? %> 
    <div id="error_explanation">
      <h2><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
      <% @document.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div> 
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :file_type %><br>
    <%= f.text_field :file_type %>
  </div>

  <%= f.fields_for :document_pages do |p| %>
     <div class="field">
       <%= p.label :image %><br>
       <%= p.file_field :image, :multiple => true, name: "document_pages[image][]" %>
     </div>
   <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
